@using AppCardapio.Models
@model List<(EndCidadeModel, CepCidadeModel)>
<div>
    <a class="btn btn-primary" asp-action="Create" asp-controller="EndCidade">Adicionar Cidade</a>
</div>
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Cidades cadastradas:
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Código</th>
                        <th scope="col">Nome</th>
                        <th scope="col">CEP</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach ((EndCidadeModel, CepCidadeModel) cidade in Model)
                    {
                        <tr>
                            <td>@cidade.Item1.Id_cidade</td>
                            <td><a asp-action="Index" asp-controller="EndCidade" asp-route-Id="@cidade.Item1.Id_cidade">@cidade.Item1.Nome_Cidade</a></td>
                            <td>@cidade.Item2.Numero_Cep</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>
