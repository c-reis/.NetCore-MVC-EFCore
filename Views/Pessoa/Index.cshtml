@using AppCardapio.Models
@model List<PessoaModel>
<div>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Pessoa">Nova Pessoa</a>
</div>
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Cidades cadastradas:
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Código</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Telefone</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PessoaModel pe in Model)
                    {
                        <tr>
                            <td>@pe.Id_pessoa</td>
                            <td>@pe.Nome_Completo</td>
                            <td>@pe.Telefone1</td>
                            <td>
                                <a asp-action="Update" asp-controller="Pessoa" asp-route-IdPessoa="@pe.Id_pessoa">Editar</a>
                                <a asp-action="Delete" asp-controller="Pessoa" asp-route-IdPessoa="@pe.Id_pessoa">Deletar</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>